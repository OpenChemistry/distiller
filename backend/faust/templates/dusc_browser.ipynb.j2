    "from pathlib import Path\n",
    "import dusc_browser\n",
    "\n",
    "from stempy.contrib import get_scan_path\n",
    "\n",
    "scan_id = {{ scan.id }}\n",
    "scan_num = {{ scan.scan_id }}\n",
    "scan_date = '{{ scan_created_date }}'\n",
    "distiller_path = Path('{{ settings.NCEMHUB_PATH }}')\n",
    "scan_path, scan_num, scan_id = get_scan_path(distiller_path / Path('counted') / Path(scan_date), scan_id=scan_id, scan_num=scan_num, version=1)\n",
    "\n",
    "assert scan_path.exists(), f'Scan does not exist: {scan_path}'\n",
    "app = dusc_browser.DuSC_app(path=scan_path)\n",
    "await app._ui.ready\n",
    "app._ui"
